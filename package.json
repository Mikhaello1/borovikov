{
  "name": "prediction",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "electron .",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron:start\"",
    "electron:start": "wait-on tcp:5173 && electron .",
    "electron:build": "vite build && electron-builder"
  },
  "build": {
    "appId": "borovikov.app.bsuir",
    "win": {
      "target": [
        "nsis"
      ]
    },
    "files": [
      "dist/**/*",
      "electron/main.cjs",
      "node_modules/**/*",
      "package.json"
    ],
    "nsis":{
      "uninstallDisplayName": "Uninstall this app",
      "oneClick": "false",
      "license": "license.txt",
      "allowToChangeInstallationDirectory": "true"
    },
    "directories": {
      "output": "releases",
      "buildResources": "dist"
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.5.1",
    "algebrite": "^1.4.0",
    "chart.js": "^4.4.8",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "math": "^0.0.3",
    "mathjs": "^14.2.0",
    "nerdamer": "^1.1.13",
    "numeric": "^1.2.6",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0",
    "react-router": "^7.1.5",
    "regression": "^2.0.1",
    "wait-on": "^8.0.3",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@electron/remote": "^2.1.2",
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "electron": "^34.5.6",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "vite": "^6.0.5"
  }
}
